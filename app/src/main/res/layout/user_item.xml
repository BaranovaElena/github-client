<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_default" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_item_login_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/user_card_padding"
            android:textSize="@dimen/user_item_login_text_size" />

        <TextView
            android:id="@+id/user_item_rating_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/user_card_padding"
            android:text="@string/user_item_rating_title_text"
            android:textSize="@dimen/user_item_rating_text_size"/>

        <TextView
            android:id="@+id/user_item_rating_value_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/user_card_padding"
            android:textSize="@dimen/user_item_rating_text_size"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>